@model IEnumerable<KatShop.Models.Role>

@{
    ViewData["Title"] = "Quản lý quyền truy cập";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb bg-light-lighten p-2">
        <li class="breadcrumb-item"><a href="#"><i class="uil-home-alt"></i> Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
    </ol>
</nav>
<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Tạo Role mới</a>
</p>
<hr/>
<table id="basic-datatable" class="table dt-responsive nowrap w-100">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tên</th>
            <th>Mô tả</th>
            <th></th>
        
        </tr>
    </thead>


    <tbody>
        @if(Model != null){
            @foreach (var item in Model)
           {
                <tr>
                    <td>@item.RoleId</td>
                    <td>@item.RoleName</td>
                    <td>@item.Description</td>
                    <td>
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="Role" asp-action="Edit" asp-route-id="@item.RoleId">Sưa</a>
                        <a class="btn btn-success" asp-area="Admin" asp-controller="Role" asp-action="Details" asp-route-id="@item.RoleId">Chi tiết</a>
                        <a class="btn btn-danger" asp-area="Admin" asp-controller="Role" asp-action="Delete" asp-route-id="@item.RoleId">Xóa</a>
                     
                        
                    </td>
                    
                </tr>
            }
        }
       
    </tbody>
</table>










