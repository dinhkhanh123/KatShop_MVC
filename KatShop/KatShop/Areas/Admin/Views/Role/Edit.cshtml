@model KatShop.Models.Role

@{
    ViewData["Title"] = "Cập nhật quyền truy cập";
}

<h1>@ViewData["Title"]</h1>


<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="Edit" method="post" asp-route-id="@Model.RoleId" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoleId" />
                <div class="mb-3">
                    <label class="form-label" asp-for="RoleName" >Tên Role</label>
                    <input type="text" class="form-control" id="validationCustom01" placeholder="Tên quyền truy cập" asp-for="RoleName" required>
                    <div class="valid-feedback">
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                </div>

            <div class="mb-3">
                <label class="form-label" asp-for="Description">Mô tả</label>
                <input type="text" class="form-control" id="validationCustom01" placeholder="Mô tả" asp-for="Description" required>
                <div class="valid-feedback">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>


            <button class="btn btn-success" type="submit" value="Save">Lưu</button>
            
            | <a class="btn btn-light" asp-action="Index">Quay lại</a>
</form>

