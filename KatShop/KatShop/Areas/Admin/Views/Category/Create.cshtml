@model KatShop.Models.Category

@{
    ViewData["Title"] = "Tạo danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <!-- Start Content-->
    <div class="container-fluid">
        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>

                            <li class="breadcrumb-item active">@ViewData["Title"]</li>
                        </ol>
                    </div>
                    <h2 class="page-title">@ViewData["Title"]</h2>
                </div>
            </div>
        </div>
        <!-- end page title -->
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form asp-controller="Category" asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3 col-md-6">
                        <label asp-for="CatName" class="form-label">Tên danh mục :</label>
                        <input type="text" id="simpleinput" class="form-control" asp-for="CatName">
                    </div>

                    <div class="mb-3 col-md-6">
                        <label asp-for="Description" class="form-label">Mô tả :</label>
                        <textarea class="form-control" id="example-textarea" rows="5" asp-for="Description"></textarea>
                    </div>

                   @* <div class="mb-3 col-md-6">
                        <label asp-for="ParentId" class="form-label">Danh mục cha :</label>
                        <input type="number" class="form-control" asp-for="ParentId">
                    </div>

                    <div class="mb-3 col-md-6">
                        <label asp-for="Levels" class="form-label">Levels :</label>
                        <input type="number" class="form-control" asp-for="Levels">
                    </div>*@

                    <div class="mb-3 col-md-6">
                        <label asp-for="Ordering" class="form-label">Sắp xếp:</label>
                        <input type="number" class="form-control" asp-for="Ordering">
                    </div>

                    <div class="mb-3 col-md-6">
                        <label asp-for="Thumb" class="form-label">Ảnh sản phẩm :</label>
                        <input type="file" name="fThumb" class="form-control" asp-for="Thumb">
                        <span asp-validation-for="Thumb" class="text-danger"></span>
                    </div>

                    <div class="mb-3 col-md-6">
                        <label asp-for="Title" class="form-label">Title :</label>
                        <input type="text" class="form-control" asp-for="Title">
                    </div>

                    <div class="mb-3 col-md-6">
                        <label asp-for="Alias" class="form-label">Alias :</label>
                        <input type="text" class="form-control" asp-for="Alias">
                    </div>

                    <div class="mb-3 col-md-6">
                        <label asp-for="MetaDesc" class="form-label">MetaDesc :</label>
                        <input type="text" class="form-control" asp-for="MetaDesc">
                    </div>

                    <div class="mb-3 col-md-6">
                        <label asp-for="MetaKey" class="form-label">MetaKey :</label>
                        <input type="text" class="form-control" asp-for="MetaKey">
                    </div>

                    <div class="mb-3 col-md-6">
                        <label asp-for="Cover" class="form-label">Cover :</label>
                        <input type="text" class="form-control" asp-for="Cover">
                    </div>
                    <div class="mb-3 col-md-6">
                        <label asp-for="SchemaMarkup" class="form-label">SchemaMarkup :</label>
                        <input type="text" class="form-control" asp-for="SchemaMarkup">
                    </div>
                    <div class="form-check form-check-inline mb-3 col-md-6">
                        <input type="checkbox" class="form-check-input" asp-for="Published">
                        <label class="form-check-label" asp-for="Published">Trạng thái</label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a class="btn btn-dark" asp-action="Index">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <!-- Quill css -->
    <link href="~/admin_assets/css/vendor/quill.core.css" rel="stylesheet" type="text/css" />
    <link href="~/admin_assets/css/vendor/quill.snow.css" rel="stylesheet" type="text/css" />
    <!-- quill js -->

    <script src="~/admin_assets/js/vendor/quill.min.js"></script>
    <!-- quill Init js-->
    <script src="~/admin_assets/js/pages/demo.quilljs.js"></script>
}
