@model KatShop.Models.Product

@{
	ViewData["Title"] = Model.ProductName;
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
	<!-- Start Content-->
	<div class="container-fluid">
		<!-- start page title -->
		<div class="row">
			<div class="col-12">
				<div class="page-title-box">
					<div class="page-title-right">
						<ol class="breadcrumb m-0">
							<li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index">Home</a></li>

							<li class="breadcrumb-item active">@ViewData["Title"]</li>
						</ol>
					</div>
					<h6 class="page-title "><a asp-area="Admin" asp-action="Index" class="text-dark"><i class="mdi mdi-undo-variant">Quay lại</i></a></h6>
				</div>
			</div>
		</div>
		<!-- end page title -->
		<hr />

		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-body">
						<div class="row">
							<div class="col-lg-5">
								<!-- Product image -->
								<a href="javascript: void(0);" class="text-center d-block mb-4">
									<img src="~/images/products/@Model.Thumb" class="img-fluid" style="max-width: 280px;" alt="Product-img">
								</a>

								<div class="d-lg-flex d-none justify-content-center">
									<a href="javascript: void(0);">
										<img src="~/images/products/@Model.Thumb1" class="img-fluid img-thumbnail p-2" style="max-width: 75px;" alt="Product-img">
									</a>
									<a href="javascript: void(0);" class="ms-2">
										<img src="~/images/products/@Model.Thumb2" class="img-fluid img-thumbnail p-2" style="max-width: 75px;" alt="Product-img">
									</a>
									<a href="javascript: void(0);" class="ms-2">
										<img src="~/images/products/@Model.Thumb3" class="img-fluid img-thumbnail p-2" style="max-width: 75px;" alt="Product-img">
									</a>
								</div>
							</div> <!-- end col -->
							<div class="col-lg-7">
								<form class="ps-lg-4">
									<!-- Product title -->
									<h3 class="mt-0">@Model.ProductName (@Model.Cat.CatName)<a  asp-action="Edit" asp-route-id="@Model.ProductId"><i class="mdi mdi-square-edit-outline ms-2"></i></a> </h3>
									<p class="mb-1">@Model.DateCreated.Value.ToShortDateString()</p>
									<p class="font-16">
										<span class="text-warning mdi mdi-star"></span>
										<span class="text-warning mdi mdi-star"></span>
										<span class="text-warning mdi mdi-star"></span>
										<span class="text-warning mdi mdi-star"></span>
										<span class="text-warning mdi mdi-star"></span>
									</p>

									<!-- Product stock -->

									<div class="mt-3">
										@if (Model.UnitslnStock > 0)
										{
											<h4><span class="badge badge-success-lighten">Còn hàng</span></h4>
										}
										else
										{
											<h4><span class="badge badge-error-lighten">Hết hàng</span></h4>
										}

									</div>

									<!-- Product description -->
									<div class="mt-4">
										<h6 class="font-14">Giá:</h6>
										<h3> @Model.Price.Value.ToString("#,##0") VNĐ</h3>
									</div>

				

									<!-- Product description -->
									<div class="mt-4">
										<h6 class="font-14">Mô tả:</h6>
										<p>
											@Model.ShortDesc
										</p>
									</div>

									<!-- Product information -->
									<div class="mt-4">
										<div class="row">
											<div class="col-md-4">
												<h6 class="font-14">Tồn kho:</h6>
												<p class="text-sm lh-150">@Model.UnitslnStock</p>
											</div>
										
										</div>
									</div>
									<div class="mt-4">
										<div class="row">
											<div class="col-md-4">

												<h6 class="font-14">HomeFlag </h6>

												@if (Model.HomeFlag)
												{
													<div class="form-check form-check-inline">
														<input type="checkbox" class="form-check-input" id="customCheck5" checked disabled>
														<label class="form-check-label" for="customCheck5"></label>
													</div>
												}
												else
												{
													<div class="form-check form-check-inline">
														<input type="checkbox" class="form-check-input" id="customCheck6" disabled>
														<label class="form-check-label" for="customCheck6"></label>
													</div>
												}
											</div>
											<div class="col-md-4">
												<h6 class="font-14">Trạng thái </h6>

												@if (Model.Active)
												{
													<div class="form-check form-check-inline">
														<input type="checkbox" class="form-check-input" id="customCheck5" checked disabled>
														<label class="form-check-label" for="customCheck5"></label>
													</div>
												}
												else
												{
													<div class="form-check form-check-inline">
														<input type="checkbox" class="form-check-input" id="customCheck6" disabled>
														<label class="form-check-label" for="customCheck6"></label>
													</div>
												}

											</div>
											<div class="col-md-4">
												<h6 class="font-14">BestSaller </h6>
												<td>
													@if (Model.BestSaller)
													{
														<div class="form-check form-check-inline">
															<input type="checkbox" class="form-check-input" id="customCheck5" checked disabled>
															<label class="form-check-label" for="customCheck5"></label>
														</div>
													}
													else
													{
														<div class="form-check form-check-inline">
															<input type="checkbox" class="form-check-input" id="customCheck6" disabled>
															<label class="form-check-label" for="customCheck6"></label>
														</div>
													}

											</div>
										</div>
										
									</div>

								</form>
