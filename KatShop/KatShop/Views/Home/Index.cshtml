</div>

<!-- New Arrivals -->

<div class="new_arrivals">
	<div class="container">
		<div class="row">
			<div class="col text-center">
				<div class="section_title new_arrivals_title">
					<h2>GỢI Ý DÀNH CHO BẠN</h2>
					<h5>Những sản phẩm mới nhất</h5>
				</div>
			</div>
		</div>
		<div class="row align-items-center">
			<div class="col text-center">
				<div class="new_arrivals_sorting">
					<ul class="arrivals_grid_sorting clearfix button-group filters-button-group">
						<li class="grid_sorting_button button d-flex flex-column justify-content-center align-items-center active is-checked" data-filter="*">Tất cả</li>
						@foreach (var item in Model.Products)
						{
							<li class="grid_sorting_button button d-flex flex-column justify-content-center align-items-center" data-filter=".@item.category.CatId">@item.category.CatName</li>
						}
					</ul>
				</div>
			</div>
			
		</div>
		<div class="row d-flex align-content-center align-items-center">
			<div class="col text-center">
				<div class="product-grid" data-isotope='{ "itemSelector": ".product-item", "layoutMode": "fitRows" }'>
					@await Html.PartialAsync("_ListProductPartialView", allProduct)
				</div>
			</div>
		</div>
		
	</div>
</div>

