<!-- Best Sellers -->

<div class="best_sellers">
	<div class="container">
		<div class="row">
			<div class="col text-center">
				<div class="section_title new_arrivals_title">
					<h2>SẢN PHẨM BÁN CHẠY NHẤT</h2>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col">
				<div class="product_slider_container">
					<div class="owl-carousel owl-theme product_slider">

						@if (newProduct != null && newProduct.Count > 0)
						{
							@foreach (var item in newProduct)
							{
								<!-- Slide 1 -->
								string url = $"/{item.Alias}-{item.ProductId}.html";
								<div class="owl-item product_slider_item">
									<div class="product-item">
										<div class="product discount">
											<div class="product_image">
												<img height="220" src="~/images/products/@item.Thumb" alt="@item.Title">
											</div>
											@if (item.HomeFlag)
											{
												<div class="product_bubble product_bubble_left product_bubble_green d-flex flex-column align-items-center"><span>new</span></div>
											}
											@if (item.Discount != null)
											{
												<div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>sale</span></div>
											}
											<div class="product_info">
												<h6 class="product_name"><a href="@url">@item.Title</a></h6>
												@if (item.Discount != null)
												{
													<div class="product_price">@item.Discount.Value.ToString("#,##0")<span>@item.Price.Value.ToString("#,##0") VNĐ</span></div>
												}
												else
												{
													<div class="product_price">@item.Price.Value.ToString("#,##0") VNĐ</div>
												}

											</div>
										</div>
									</div>
								</div>
							}
						}




					</div>

					<!-- Slider Navigation -->

					<div class="product_slider_nav_left product_slider_nav d-flex align-items-center justify-content-center flex-column">
						<i class="fa fa-chevron-left" aria-hidden="true"></i>
					</div>
					<div class="product_slider_nav_right product_slider_nav d-flex align-items-center justify-content-center flex-column">
						<i class="fa fa-chevron-right" aria-hidden="true"></i>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<!-- Benefit -->

<div class="benefit">
	<div class="container">
		<div class="row benefit_row">
			<div class="col-lg-3 benefit_col">
				<div class="benefit_item d-flex flex-row align-items-center">
					<div class="benefit_icon"><i class="fa fa-truck" aria-hidden="true"></i></div>
					<div class="benefit_content">
						<h6>miễn phí giao hàng</h6>
						<p>Giao hàng trên toàn quốc</p>
					</div>
				</div>
			</div>
			<div class="col-lg-3 benefit_col">
				<div class="benefit_item d-flex flex-row align-items-center">
					<div class="benefit_icon"><i class="fa fa-money" aria-hidden="true"></i></div>
					<div class="benefit_content">
						<h6>Ship cod</h6>
						<p>Ship cod toàn quốc</p>
					</div>
				</div>
			</div>
			<div class="col-lg-3 benefit_col">
				<div class="benefit_item d-flex flex-row align-items-center">
					<div class="benefit_icon"><i class="fa fa-undo" aria-hidden="true"></i></div>
					<div class="benefit_content">
						<h6>Giao hàng nhanh</h6>
						<p>Nhận hàng trong vòng 2-3 ngày</p>
					</div>
				</div>
			</div>
			<div class="col-lg-3 benefit_col">
				<div class="benefit_item d-flex flex-row align-items-center">
					<div class="benefit_icon"><i class="fa fa-clock-o" aria-hidden="true"></i></div>
					<div class="benefit_content">
						<h6>Mở cửa hàng tuần</h6>
						<p>8AM - 10PM</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<!-- Blogs -->

<div class="blogs">
	<div class="container">
		<div class="row">
			<div class="col text-center">
				<div class="section_title">
					<h2>Bài viết mới</h2>
				</div>
			</div>
		</div>
		<div class="row blogs_container">
			@if (Model.Posts != null && Model.Posts.Count > 0)
			{
				@foreach (var item in Model.Posts)
				{
					string url = $"/tin-tuc/{item.Alias}-{item.PostId}.html";
					<div class="col-lg-4 blog_item_col">
						<div class="blog_item">
							<div class="blog_background" style="background-image:url(/images/news/@item.Thumb)"></div>
							<div class="blog_content d-flex flex-column align-items-center justify-content-center text-center">
								<h4 class="blog_title">@item.Title</h4>
								<span class="blog_meta">by @item.Author | @item.CreateDate.Value.ToShortDateString()</span>
								<a class="blog_more" href="@url">Đọc thêm</a>
							</div>
						</div>
					</div>
				}
			}


		</div>
	</div>
</div>


