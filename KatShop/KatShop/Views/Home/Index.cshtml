<!-- Banner -->

<div class="banner">
	<div class="container">
		<div class="row">
			@if (Model.Categories != null && Model.Categories.Count > 0)
			{
				@foreach (var item in Model.Categories)
				{
					string url = $"danhmuc/{item.Alias}";
					<div class="col-md-3 ">
						<div class="banner_item align-items-center blog_item" style="background-image:url(/images/category/@item.Thumb)">
							<div class="banner_category blog_content d-flex flex-column align-items-center justify-content-center text-center text-uppercase">
								<a href="@url">@item.CatName</a>
							</div>

						</div>
					</div>
