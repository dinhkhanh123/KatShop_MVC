
@model KatShop.Models.Category

@{
   
}
<!-- Modal delete product-->
<div class="modal fade" id="deleteCategory-@Model.CatId" tabindex="-1" aria-labelledby="deleteCategoryLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            
            <form asp-controller="Category" asp-action="Delete" asp-route-id="@Model.CatId">               
                <div class="modal-header modal-colored-header bg-danger">
                    <h5 class="modal-title" id="deleteCategorytLabel">Xóa sản phẩm</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="CatId" />                  
                    <h4>Bạn có chắc chắn xóa sản phẩm : @Model.CatName</h4>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <input type="submit" class="btn btn-danger" value="Xóa" />
                </div>
            </form>
        </div>
    </div>
</div>

