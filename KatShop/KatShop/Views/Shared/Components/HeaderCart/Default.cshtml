@model List<KatShop.ModelViews.CartItem>

@if (Model != null && Model.Count() > 0)
{
<div id="main-nav" class="js-menu js-menu--right">
	<span class="js-menu__close h4">✕</span>
	<div class="container py-3 h-100">
		<div class="d-flex justify-content-between align-items-center mb-5">
			<h3 class="mb-0 text-black">GIỎ HÀNG</h3>
		</div>
		<div class="row d-flex justify-content-center h-100">
			<div class="col-12 ">
				<div class="card card-registration " style="border-radius: 15px;">
					<div class="card-body p-0">
						<div class="row g-0">
							<div class="col-lg-12">
								<div class="p-3">
										@foreach (var item in Model)
										{

									<div class="row d-flex justify-content-between align-items-center">
										<div class="col-md-4 col-lg-4 col-xl-4">
													<img width="80" height="80" style="border-radius: 80px;" src="~/images/products/@item.product.Thumb" alt="@item.product.ProductName">
										</div>
										<div class="col-md-8 col-lg-8 col-xl-8">
													<h5 class="text-muted">@item.product.ProductName</h5>
													<h6 class="text-black mb-0">Số lượng: @item.amount </h6>
													@if (item.product.Discount != null){
														item.product.Price = item.product.Discount;
													}
													@{
														int total = item.amount * item.product.Price.Value;
													}
													<span class="text-black">Giá: @total.ToString("#,##0") VNĐ</span>
										</div>
									</div>
									<hr />
									}

								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="row col-12  " style="z-index:1;">
				<div class="col-4">
					<h4>Tổng: </h4>
				</div>
				<div class="col-8">
						<h4>@Model.Sum(x => x.TotalMoney).ToString("#,##0") VNĐ</h4>
				</div>
                    @if (User.Identity.IsAuthenticated)
                    {



						<a style="height:50px" class="btn btn-outline-dark col-12 mb-3 d-flex align-items-center justify-content-center" asp-controller="ShoppingCart" asp-action="Index">
                            GIỎ HÀNG
                        </a>
                      
                    }
                    else
                    {
                        <a style="height:50px" class="btn btn-outline-dark col-12 mb-3 d-flex align-items-center justify-content-center" href="/dang-nhap.html?returnUrl=/cart.html">

                            GIỎ HÀNG
                        </a>
                       
                    }
		
			</div>

		</div>

	</div>
</div>
}else
{
<div id="main-nav" class="js-menu js-menu--right">
	<span class="js-menu__close h4">✕</span>
	<div class="container py-3 h-100">
		<div class="d-flex justify-content-between align-items-center mb-5">
			<h3 class="mb-0 text-black">GIỎ HÀNG</h3>
		</div>
		<div class="row d-flex justify-content-center h-100">
			<div class="col-12 ">
				<div class="card card-registration " style="border-radius: 15px;">
					<div class="card-body p-0">
						<div class="row g-0">
							<div class="col-lg-12">
								<div class="p-3">
										

								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="row col-12  " style="z-index:1;">
				<div class="col-4">
					<h4>Tổng: </h4>
				</div>
				<div class="col-8">
						<h4>0 VNĐ</h4>
				</div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a style="height:50px" class="btn btn-outline-dark col-12 mb-3 d-flex align-items-center justify-content-center" href="cart.html">

                            GIỎ HÀNG
                        </a>
                      
                    }
                    else
                    {
                        <a style="height:50px" class="btn btn-outline-dark col-12 mb-3 d-flex align-items-center justify-content-center" href="/dang-nhap.html?returnUrl=/cart.html">

                            GIỎ HÀNG
                        </a>
                       
                    }
		
			</div>

		</div>

	</div>
</div>
}